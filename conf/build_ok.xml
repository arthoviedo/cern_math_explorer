<project name="mathmlexplorer" basedir="." default="solranalyzerjar">
	<property name="build" value="../build"/>
	<property file="build.properties"/>
	
	<target name="clean">
		<delete dir="${build}"/>
	</target>

	<target name="init" depends="clean">
		<mkdir dir="${build}"/>
	</target>	
	
	<target name="compile" depends="init">
		<!-- Compile the java code -->
		<javac srcdir="../src/cern/ch/mathexplorer/lucene" destdir="${build}">
			<classpath>
				<pathelement location="../lib/commons-lang3-3.1.jar"/>
				<pathelement location="../lib/lucene-core-4.6-SNAPSHOT.jar"/>
				<pathelement location="../lib/lucene-analyzers-common-4.6-SNAPSHOT.jar"/>
				<pathelement location="../lib/solr-core-4.6.0.jar"/>
				
			</classpath>
		</javac>
	</target>	
	
	<target name="solranalyzerjar" depends="compile">
		<!-- Build the jar file -->
		<jar basedir="${build}" destfile="${build}/solranalyzer.jar"/>
	</target>
	
</project>